    <!-- header section end -->
    <div  class="container">
      <div style="display: flex; flex-wrap: wrap; justify-content: center;" class="row justify-content-center mt-5">
        <ul style="display: flex; flex-wrap: wrap; justify-content: center; " class="list-unstyled">
          <% for(var i=0; i<runners.length; i++) { %>
            <% if(!user._id.equals(runners[i]._id)) { %>
              <li  style="padding: 16px; border: 1px solid black; display: flex; width: 45%; margin: 2%; flex-direction: column; border-radius: 8px; background-color: #f9f9f9;" class="runner-card mb-4">
                <div class="profile">
                  <img style="width:200px; height:200px;"class="profile-img" src="<%= runners[i].image %>" alt="<%= runners[i].firstName %>">
                  <div class="details">
                    <p><strong style="color:black">Name:</strong> <%= runners[i].firstName %> <%= runners[i].lastName %></p>
                    <p><strong style="color:black">100m:</strong> <%= runners[i].time100m %></p>
                    <p><strong style="color:black">200m:</strong> <%= runners[i].time200m %></p>
                    <p><strong style="color:black">400m:</strong> <%= runners[i].time400m %></p>
                    <p><strong style="color:black">800m:</strong> <%= runners[i].time800m %></p>
                    <p><strong style="color:black">1500m:</strong> <%= runners[i].time1500m %></p>
                    <p><strong style="color:black">3000m:</strong> <%= runners[i].time3000m %></p>
                    <p><strong style="color:black">Availability:</strong> <%= runners[i].availability %></p>
                    <p><strong style="color:black">Workout Preference:</strong> <%= runners[i].workoutPreference %></p>
                    <% if(user.sentInvitations.filter(id => id.equals(runners[i]._id)).length) { %>
                      <p><em>Invite Sent</em></p>
                    <% } else { %>
                      <form action="/invite/<%= runners[i]._id %>">
                        <button class="btn btn-primary">Connect</button>
                      </form>
                    <% } %>
                  </div>
                </div>
              </li>
            <% } %>
          <% } %>
        </ul>
      </div>
    </div>
    
 
